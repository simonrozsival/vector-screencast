parameters:


php:
	date.timezone: Europe/Prague


nette:
	application:
		errorPresenter: Error
		mapping:
			*: App\*Module\Presenters\*Presenter

	session:
		expiration: 14 days


services:
	- App\Model\Recording
	- App\Model\Audio
	- App\RouterFactory
	router: @App\RouterFactory::createRouter


database:
	dsn: "mysql:host=localhost;dbname=video"
	user: "root"
	password:
	options:
		lazy: yes